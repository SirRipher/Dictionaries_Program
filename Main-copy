#--------Dictionaries & Lists--------#
Names = []
Grades = {}
Grade = {}

#--------Functions--------#

def start():
    print("Welcome to the grade recorder,")
    try:
        people = int(input("How many people are there?\n>>>" ))
        names(people)
    except:
        print("numbers please.")
        start()
        
def names(people):
    print(f"Ok, There are {people} people.")
    
    number_of_people = people
    
    while number_of_people <= people:
        if number_of_people == people:
            name = input(str("please print one name at a time.\n>>>" ))
            Names.append(name)
            number_of_people = number_of_people - 1
        elif number_of_people >= 1:
            name = input(str("Who's next?\n>>>" ))
            Names.append(name)
            number_of_people = number_of_people - 1
        else:
            number_of_people = people + 1
    print("Are these the right names?")
    print(' \n'.join(Names))
    awnser = input(">>>" )
    if awnser == 'y' or awnser == 'Yes' or awnser == 'yes':
        print("Great!")
        awnser_1 = len(Names)
        print(f"There are {awnser_1} people now in the software.")
        grades(people)
    else:
        Names.clear()
        names(people)
                   
def grades(people):
    print("Now that we have the people's names lets add their marks")
    number_of_people = people
    play = True
    while play == True:
        if number_of_people == people:
            name_1 = input("What is their name?\n>>>" )
            if name_1 in Names:
                grade = input("what was their mark?\n>>>" )
                Grades[name_1] = (grade)
                number_of_people = people - 1
            else:
                print("Make sure to type the name the same.")
                play = True
        elif number_of_people >= 1:
            name_1 = input("What is their name?\n>>>" )
            if name_1 in Names:
                grade = float(input("what was their mark?\n>>>" ))
                Grades[name_1] = (grade)
                number_of_people = number_of_people - 1
            else:
                print("Make sure to type the name the same.")
                play = True
        else:
            print("Now that we have the names and their marks in")
            print("let's add their grade.")
            play = False
    number_of_people = people
    final_grade(number_of_people)

def final_grade(number_of_people):
    people = number_of_people
    play = True
    while play == True:
        if number_of_people == people:
            name_2 = input("What was their name?\n>>>" )
            if name_2 in Names:
                try:
                    grade_2 = int(input("What is their class #?\n>>>" ))
                    Grade[name_2] = (grade_2)
                    number_of_people = number_of_people - 1
                except:
                    print("Number please.")
            else:
                print("Make sue you spelt that right.")
        elif number_of_people >= 1:
            name_3 = input("What was their name?\n>>>" )
            if name_3 in Names:
                try:
                    grade_3 = int(input("What is their class #?\n>>>" ))
                    Grade[name_3] = (grade_3)
                    number_of_people = number_of_people - 1
                except:
                    print("Please type a number")
            else:
                print("Make sure to spell out their actuall names.")
        else:
            play = False       
    End(people)
    
def End(people):
    print("Now you have all of your people and their data in the software.")
    print("The students in your class consist of:")
    print(' \n'.join(Names))
    print("Then you also have their average in your class:")
    for key, value in Grades.items():
        print(key, ' : ', value)# thanks google
    print("Then lastly you have the grade level they are in.")
    for key, value in Grade.items():
        print(key, ' : ', value)
        
    #add in something to get rid of the names or smthin#
                
#----Code Starts Here----#
start()
